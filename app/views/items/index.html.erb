<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Taxable value</th>
    <th>Cost</th>
    <th>Stock</th>
    <th>Backorderable</th>
    <th>Shape</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.taxable_value %></td>
    <td><%= item.cost %></td>
    <td><%= item.stock %></td>
    <td><%= item.backorderable %></td>
    <td><%= item.shape %></td>
    <td><%= item.note %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


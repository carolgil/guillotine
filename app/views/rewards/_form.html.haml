= form_for(@reward, :remote => true) do |f|
  - if @reward.errors.any?
    #error_explanation
      %h2<
        =pluralize(@reward.errors.count, "error")
        prohibited this reward from being saved:

      %ul
      -@reward.errors.full_messages.each do |msg|
        %li= msg
  -if @rewardID != 'new'
    .deleteRewardLink
      = link_to '[X]', {:action=>'destroy', :id=>@reward}, :confirm=>"Are you sure?", :method=>:delete
  .field
    = f.label :item 
    = f.select( :item, options_for_select(Item.for_select, @selectedItem), {}, :class => "chzn-select" )
  .field.centered
    %abbr{:title => "Premia Sent?"}
      = f.label :premia_sent, "&nbsp;".html_safe, :class => "fontawesome-gift icon-large"
    = f.check_box :premia_sent
  .field
    = f.label :comment
    = f.text_area :comment, :rows => 3
  = f.hidden_field :pledger_id
  .actions
    = f.submit :disable_with => "Saving..."
    = button_tag "Cancel", :type => "button", :id => "rewardFormCancelButton", :data => { :id => @rewardID }
